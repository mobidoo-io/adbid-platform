    <!-- Tabs -->
    <div class="tabs-container">
        <div class="tabs">
            <a href="#" class="tab active" data-tab="ad-accounts">Ad accounts</a>
            <a href="#" class="tab" data-tab="facebook-pages">Facebook Pages</a>
            <a href="#" class="tab" data-tab="instagram">Instagram accounts</a>
        </div>
    </div>
    
    <!-- Content for Ad Accounts Tab -->
    <div id="ad-accounts-content" class="tab-content active">
        <div class="info-banner">
            Your monthly bill is calculated by the combined ad spend of active ad accounts managed by Birch.
        </div>
        
        <div class="filters-section">
            <div class="search-box">
                <span class="search-icon">🔍</span>
                <input type="text" class="search-input" placeholder="Search">
            </div>
            <div class="dropdown-filter">
                All profiles <span>▼</span>
            </div>
            <div class="dropdown-filter">
                All ad accounts <span>▼</span>
