            </div>
        </div>
    </div>
    
    <!-- Upload Modal -->
    <div id="uploadModal" class="modal-overlay">
        <div class="modal">
            <div class="modal-header">
                <h2 class="modal-title">Upload Creative</h2>
            </div>
            <div class="modal-body">
                <div class="upload-area" onclick="document.getElementById('fileInput').click()">
                    <div class="upload-icon">📁</div>
                    <div class="upload-text">Click to upload or drag and drop</div>
                    <div class="upload-subtext">PNG, JPG, MP4 up to 100MB</div>
                    <input type="file" id="fileInput" style="display: none;" multiple accept="image/*,video/*">
                </div>
                
                <div class="form-group" style="margin-top: 24px;">
                    <label class="form-label">Creative Name</label>
                    <input type="text" class="form-input" placeholder="Enter creative name">
                </div>
                
                <div class="form-group">
                    <label class="form-label">Creative Type</label>
                    <select class="form-select">
                        <option>Single Image</option>
                        <option>Video</option>
                        <option>Carousel</option>
                        <option>Collection</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Tags</label>
                    <input type="text" class="form-input" placeholder="Add tags separated by commas">
                </div>
                
                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea class="form-textarea" placeholder="Add a description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="modal-btn cancel" onclick="closeUploadModal()">Cancel</button>
                <button class="modal-btn upload" onclick="uploadCreative()">Upload</button>
            </div>
        </div>
    </div>
    
    <script>
        // Modal functions
        function openUploadModal() {
            document.getElementById('uploadModal').classList.add('active');
        }
        
        function closeUploadModal() {
            document.getElementById('uploadModal').classList.remove('active');
        }
        
        function uploadCreative() {
            alert('Creative uploaded successfully!');
            closeUploadModal();
        }
        
        // View toggle
        document.querySelectorAll('.view-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.view-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Creative card clicks
        document.querySelectorAll('.creative-card').forEach(card => {
            card.addEventListener('click', function() {
                alert('Opening creative details...');
            });
        });
        
        // File input change
        document.getElementById('fileInput').addEventListener('change', function(e) {
            if (e.target.files.length > 0) {
                alert(`Selected ${e.target.files.length} file(s)`);
            }
        });
    </script>
</body>
</html>