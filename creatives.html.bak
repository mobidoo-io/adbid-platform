                <div class="stat-value">5.8%</div>
            </div>
        </div>
        
        <!-- Creative Grid -->
        <div class="creative-grid">
            <div class="creative-card">
                <div class="creative-preview image">
                    <span class="creative-badge">IMAGE</span>
                </div>
                <div class="creative-info">
                    <div class="creative-name">Summer Sale Banner v2</div>
