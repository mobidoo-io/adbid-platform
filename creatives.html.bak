        </div>
        
        <div class="view-toggle">
            <button class="view-btn active">Grid</button>
            <button class="view-btn">List</button>
        </div>
        
        <input type="text" class="search-box" placeholder="Search creatives...">
    </div>
    
    <!-- Main Content -->
